<center>
	<h2>Help us get to know you!</h2>
	<p><i>Rate 10 or more movies you've seen to start receiving recommendations.</i></p>
	<h3>What did you think of</h3>
	<h1 style="margin-top:-10px">{{title}}?</h1>
	<img src="{{thumbnail}}" height="220px"></img>
	<br/>
	<!-- <div class="btn-group" role="group" aria-label="..." style="margin-top:15px;"> -->
		<form action="onboarding?moviesToRate={{moviesToRate}}" style="display:inline-block;
    margin:auto;">
			<div class="form-group">
				<input type="hidden" value="1" name="rating"></input>
			</div>
			<button type="submit" class="btn btn-default">
				<span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span>
				<span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span>
			</button>
		</form>
		<form action="onboarding?moviesToRate={{moviesToRate}}" style="display:inline-block;
    margin:auto;">
			<div class="form-group">
				<input type="hidden" value="2" name="rating"></input>
			</div>
			<button type="submit" class="btn btn-default">
				<span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span>
			</button>
		</form>
		<form action="onboarding?moviesToRate={{moviesToRate}}" style="display:inline-block;
    margin:auto;">
			<div class="form-group">
				<input type="hidden" value="3" name="rating"></input>
			</div>
			<button type="submit" class="btn btn-default">
				<span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
			</button>
		</form>
		<form action="onboarding?moviesToRate={{moviesToRate}}" style="display:inline-block;
    margin:auto;">
			<div class="form-group">
				<input type="hidden" value="4" name="rating"></input>
			</div>
			<button type="submit" class="btn btn-default">
				<span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
				<span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
			</button>
		</form>
	<!-- </div> -->
	<br/>
	<form action="onboarding?moviesToRate={{moviesToRate}}">
		<div class="form-group">
			<input type="hidden" value="0" name="rating"></input>
		</div>
		<button type="submit" class="btn btn-default">
			Skip
		</button>
	</form>
	<br/>
	<button type="button" class="btn btn-default" id="continuebutton">
		<a href="/mainmenu"></a>
		Get Recommendations!
	</button>
	{{#if showButton}}
		<script>
			$('#continuebutton').prop('disabled', false);
		</script>
	{{else}}
		<script>
			$('#continuebutton').prop('disabled', true);
		</script>
	{{/if}}
</center>