<center>
	<h1>Who are you watching with?</h1>
	<p>Search for your friends by username:</p>
	<select class="js-example-basic-multiple" name="group" form="friendsform" multiple="multiple" style="width: 90%">
		{{#each users}}
			<option value={{id}}>{{username}}</option>
		{{/each}}
	</select>
	<form id="friendsform" style="margin-top: 40px;" action="/findmovie" method="POST" onclick="showLoading()">
		<input type="hidden" value=-1 name="index"/>
		<center><button type="submit" class="btn btn-default">Let's Go!</button></center>
	</form>
	<script>
		$(".js-example-basic-multiple").select2();
	</script>
	<div id="load" style="visibility: hidden"><img src="http://jimpunk.net/Loading/wp-content/uploads/loading1.gif"/></div>
</center>

<script>
	showLoading = function() {
		var loadingThing = document.getElementById("load");
		loadingThing.style.visibility = "visible";
	}
</script>